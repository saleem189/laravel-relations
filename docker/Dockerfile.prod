# =========================
# 1️⃣ Composer Build Stage
# =========================
FROM composer:2 AS composer_build

WORKDIR /var/www

# Install PHP extensions required during composer install
RUN apt-get update && apt-get install -y \
        libpng-dev \
        libjpeg-dev \
        libfreetype6-dev \
        libonig-dev \
        libzip-dev \
        zip \
        unzip \
        git \
        curl \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd intl pdo pdo_mysql mbstring exif pcntl bcmath opcache zip

# Copy composer files first (for caching layer)
COPY composer.json composer.lock ./

# Copy artisan to avoid post-autoload-dump errors
COPY artisan ./

# Install PHP dependencies (no-dev for production)
RUN composer install --no-dev --prefer-dist --optimize-autoloader --no-interaction

# Copy the rest of the application code
COPY . .

# Optimize autoloader
RUN composer dump-autoload --optimize

# =========================
# 2️⃣ Node Build Stage
# =========================
FROM node:20 AS node_build

WORKDIR /app

COPY package*.json ./
RUN npm ci --legacy-peer-deps

COPY . .
RUN npm run production || echo "No frontend build step"

# =========================
# 3️⃣ Final Production Image
# =========================
FROM php:8.2-fpm

# Install system dependencies
RUN apt-get update && apt-get install -y \
        libpng-dev \
        libjpeg-dev \
        libfreetype6-dev \
        oniguruma-dev \
        libzip-dev \
        zip \
        unzip \
        git \
        curl \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd intl pdo pdo_mysql mbstring exif pcntl bcmath opcache zip

WORKDIR /var/www

# Copy application source code and vendor
COPY --from=composer_build /var/www ./

# Copy built frontend assets
COPY --from=node_build /app/public ./public

# Ensure artisan exists
RUN test -f artisan || (echo "Error: artisan file not found" && exit 1)

# Set file permissions
RUN chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage /var/www/bootstrap/cache

# Expose PHP-FPM port
EXPOSE 9000

# Start PHP-FPM
CMD ["php-fpm"]
